<% provide(:title, "Detalles") %>
<div class="row">
  <aside class="span4">
    <section>

      <%= gmaps({
        "map_options" => {"auto_zoom" => false, "zoom" => 15 },
        "markers" => {"data" => @json }
        })
      %>      

      <h1>
      	<%= image_tag @problem.avatar.url(:original) %>
      </h1>
      <ul>
     	<li>Reporte #<%= @problem.id %></li>
     	<li>Tipo: <%= @problem.ptype %></li>
     	<li>Reportero: <%= User.find(@problem.user_id).name %></li>
     	<li>Latitud: <%= @problem.latitude %></li>
     	<li>Longitud: <%= @problem.longitude %></li>
     	<li>Fecha: <%= @problem.created_at %></li>
      </ul>     
    </section>
  </aside>
</div>
