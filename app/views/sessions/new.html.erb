<% provide(:title, "Registrar") %>
<h1>Log In</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email, "Email" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Password" %>
      <%= f.password_field :password %>

      <%= f.submit "Log In", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>