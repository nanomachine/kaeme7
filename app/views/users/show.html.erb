<% provide(:title, @user.name) %>

<%= render 'layouts/sidebar' %>

<div class="row-fluid fluid-box">
  <div class="span12">
    <div class="box span3">
      <div class="box-content well">
        <%= image_tag @user.avatar.url(:medium) %>
      </div>
    </div><!--/span-->

    <div class="box span3 ">
      <h1 class="h1-profile"><%= @user.name %> <%= @user.last_name %></h1>
      <h2> 
        <% if @user.admin? %>
          Administrator
        <% elsif @user.sub_admin?%>
          Sub-Administrator
        <% else %>
          Reporter
        <% end %>
            </h2>
        <h2 class="h2-profile"><i class="icon-barcode"></i> #    <%= @user.id %></h2>
        <h2 class="h2-profile"><i class="fa-icon-phone"></i>    <%= @user.telnum %></h2>
        <h2 class="h2-profile"><i class="icon-envelope"></i>    <%= @user.email %></h2>
        <h2 class="h2-profile"><i class="icon-map-marker"></i>    <%= @user.municipality %>, PR</h2>
              
    </div><!--/span-->
    <div class="row-fluid fluid-box">
      <div class="circleStats span6">
        <div class="box span4 circle-box">                  
          <div class="span2" onTablet="span4" onDesktop="span2">
            <div class="circleStatsItem red">
              <i class="fa-icon-eye-open"></i>
              <span class="plus">+</span>
              <span class="percent">%</span>
              <input type="text" value="58" class="orangeCircle" />
            </div>
            <div class="box-small-title">Reports Assigned</div>
          </div>
        </div>
        <div class="box span4 circle-box">
          <div class="span2" onTablet="span4" onDesktop="span2">
            <div class="circleStatsItem blue">
              <i class="fa-icon-check"></i>
              <span class="plus">+</span>
              <span class="percent">%</span>
              <input type="text" value="8" class="blueCircle" />
            </div>
            <div class="box-small-title">Reports Resolved</div>
          </div>
        </div>
        <div class="box span4 circle-box">
          <div class="span2" onTablet="span4" onDesktop="span2">
            <div class="circleStatsItem yellow">
              <i class="fa-icon-warning-sign"></i>
              <span class="plus">+</span>
              <span class="percent">%</span>
              <input type="text" value="12" class="yellowCircle" />
            </div>
            <div class="box-small-title">Reports Pending</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row-fluid fluid-box">
  <div class="span12">
    <div class="box span6">
      <div class="box-header">
        <h2><i class="icon-signal"></i><span class="break"></span>Report resolution - two-month comparison</h2>
        <div class="box-icon">
          <a href="#" class="btn-setting"><i class="icon-wrench"></i></a>
          <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
          <a href="#" class="btn-close"><i class="icon-remove"></i></a>
        </div>
      </div>
      <div class="box-content">
        <div id="stats-chart"  class="center" style="height:300px" ></div>
      </div>
    </div>

    <div class="box span6">
      <div class="box-header">
        <h2><i class="icon-list"></i><span class="break"></span>Report tickets</h2>
        <div class="box-icon">
          <%= link_to new_problem_path, class: 'btn btn-success' do %>
          <i class="icon-plus"></i>
        <% end %>
      </div>
      </div>
      <div class="box-content">
        <ul class="tickets">
          <li class="ticket">
            <% @user = current_user %>
            <% @user.problems.each do |problem| %>

              <span class="header"> 
                <span class="title"><%= link_to problem.title, problem %></span>
                <span class="number"><%= link_to problem.get_prob_type, problem%> <%= link_to "[#"+problem.id.to_s+"]", problem%></span>
              </span>
              <span class="content">
                <span class="avatar">  <img src="<%=problem.avatar.url(:thumb) %>"></span>
                <span class="name">By:<%= @user.name %> 
                  <%= @user.last_name %></span>
                <!-- Implement priority partial for viewing -->
                <span class="priority blue">[ <%=problem.get_prob_priority %> ]</span>
                <span class="status">Status: <span class="green">[ <%= problem.get_prob_status %> ]</span></span>
                <span class="date"><%= problem.created_at.strftime(" %b.%d %Y") %></span>
              </span>                                                         
            <% end %>
          </li>
        </ul>
      </div>
    </div><!--/span-->

  </div>

</div>