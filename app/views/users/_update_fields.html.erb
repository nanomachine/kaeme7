
	<%= render 'shared/error_messages' %>

	<div class="control-group">
		<label class="control-label" for="focusedInput">First Name</label>
			<div class="controls">
				<div class="input-xlarge focused" id="focusedInput" type="text">
					<%= f.text_field :name %>
				</div>
			</div>
	</div>

	<div class="control-group">
		<label class="control-label" for="focusedInput">Last Name</label>
			<div class="controls">
				<div class="input-xlarge focused" id="focusedInput" type="text">
					<%= f.text_field :last_name %>
				</div>
			</div>
	</div>

	<div class="control-group">
		<label class="control-label" for="focusedInput">Email</label>
			<div class="controls">
				<div class="input-xlarge focused" id="focusedInput" type="text">
					<%= f.text_field :email %>
				</div>
			</div>
	</div>

	<div class="control-group">
		<label class="control-label" for="focusedInput">Telephone</label>
			<div class="controls">
				<div class="input-xlarge focused" id="focusedInput" type="text">
					<%= f.text_field :telnum %>
				</div>
			</div>
	</div>

	<div class="control-group">
		<label class="control-label" for="focusedInput">Municipality</label>
			<div class="controls">
				<div class="input-xlarge focused" id="focusedInput" type="text">
					<%= f.text_field :municipality %>
				</div>
			</div>
	</div>

	<div class="control-group">
		<label class="control-label" for="focusedInput">Change Picture</label>
			<div class="controls">
				<div class="input-xlarge focused" id="focusedInput" type="text">
					<%= f.file_field :avatar %>
				</div>
			</div>
	</div>

	<div class="form-actions">
		<%= f.submit "Update", class: "btn btn-success" %>
    	<%= link_to user_path, class: 'btn' do %>Back
    	<% end %>
	</div>
