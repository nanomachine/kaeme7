<% provide(:title, 'Editar Usuario') %> 
<h1>Actualice su perfil</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, "Nombre" %>
      <%= f.text_field :name %>

      <%= f.label :email, "Correo" %>
      <%= f.text_field :email %>

      <%= f.label :password, "ContraseÃ±a" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmar" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Guardar cambios", class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">change</a>
  </div>
</div>