<head>
	<style type="text/css">
	body { 
		background: url(../../images/km7theroad.jpg) no-repeat center center fixed;
		-webkit-background-size: cover;
		-moz-background-size: cover;
		-o-background-size: cover;
		background-size: cover;
	}
	</style>
</head>
<body>
	<div class="container-fluid">
		<div class="row-fluid">
<!--User hero-unit to have large header -->
			<div class="span12 hero-unit hero-unit-login">
				<h1>Bienvenidos a Kilómetro Siete</h1>
				<h2>
					 La <a href="http://www.kilometrosiete.com/">plataforma electrónica</a> para la documentación y manejo de reportes o servicios cívicos.
				</h2>
			</div>

			<div class="row-fluid">
			<div class="login-box center">
				<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
					<div class="input-prepend" title="Correo">
						<span class="add-on"><i class="icon-user"></i></span>
  							 <%= f.text_field :email, :autofocus => true %>						
						</div>
					<div class="clearfix"></div>
						<div class="input-prepend" title="Contraseña">
							<span class="add-on"><i class="icon-lock"></i></span>
							<%= f.password_field :password %>
						</div>
						<% if devise_mapping.rememberable? -%>
							<div class="clearfix"></div>
							<h1 class="h1-login remember"><%= f.check_box :remember_me %>		
							Recuerdame</h1>
						<% end %>
						<h1 class="box"><%= link_to "Olvidó su contraseña?", new_password_path(resource_name), :class => 'h1-login btn-setting'%></h1>
						
						<div class="clearfix"></div>							

						<div class="clearfix"></div>
						<hr class="hr-login">
						<div class="buttons">	
							<%= f.submit "Iniciar", class: 'btn-large btn-info'%>
						</div>
					<% end %>
				</div><!--/span-->
			</div>
		</div><!--/fluid-row-->	
	</div><!--/.fluid-container-->
</body>

<%= render 'layouts/landing_footer' %>


<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => "form-horizontal", :method => :post }) do |f| %>
  <%= devise_error_messages! %>
	<div class="modal hide fade" id="myModal">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal"></button>
			<h3>Cambiar contraseña</h3>
			<p>Entre su correo electrónico y le enviaremos instrucciones para cambiar su contraseña.</p>
		</div>

		<div class="modal-body">
		    <div class="control-group">
		      <label class="control-label" for="focusedInput">Correo</label>
		      <div class="controls">
		        <div class="input-xlarge focused" id="focusedInput" type="text">
	  				<%= f.email_field :email, :autofocus => true %></div>
		        </div>
		      </div>
		    </div>		
		<div class="modal-footer"> 
			<a class="form-action btn" data-dismiss="modal">Salir</a>
			<a class="form-action"> <%= f.submit "Enviar", class: "btn btn-success" %> </a>
			</a>
		</div>
	</div>
<% end %>
