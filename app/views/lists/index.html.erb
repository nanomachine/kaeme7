<% provide(:title, 'Lists') %>
<h1>Lists</h1>
<body>
	<%= will_paginate %>

	<%= link_to 'New List',  new_list_path %>

	<ul class="users">
		<% @lists.each do |list| %>
			<table>
		        <tr>
		          <td><%= list.id %></td>
		          <td><%= list.name %></td>
		          <td><%= link_to ' Show ', list %></td>
		          <td><%= link_to '| Edit', edit_list_path(list) %></td>
		          <td><%= link_to '| Delete ', list, :confirm => 'Are you sure you wish to delete this list?', 
		           :method => :delete %></td>
		        </tr>   
	      	</table>	
	    <% end %>

	    <%= link_to "Reports", problems_path %>
	</ul>
	<%= will_paginate %>
</body>